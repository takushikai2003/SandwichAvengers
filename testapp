<script>
  const userData = {};
  const triviaQuestions = [
    {
      q: "What does MBTI stand for?",
      a: ["Myers-Briggs Type Indicator", "Major Behavioral Trait Index"],
      correct: 0
    },
    {
      q: "How many MBTI types are there?",
      a: ["12", "16"],
      correct: 1
    }
  ];
  let currentQ = 0;

  function show(id) {
    document.querySelectorAll('.box').forEach(el => el.classList.remove('active'));
    document.getElementById(id).classList.add('active');
  }

  function saveMBTI() {
    const mbti = document.getElementById("mbtiType").value;
    if (!mbti) {
      alert("Please select your MBTI type.");
      return;
    }
    userData.mbti = mbti;
    show('avatarScreen');
  }

  function selectAvatar(avatar) {
    userData.avatar = avatar;
    alert("Avatar selected: " + avatar);
    show('guildScreen');
  }

  function joinGuild(guild) {
    userData.guild = guild;
    alert("Guild joined: " + guild);
    show('moodScreen');
  }

  function saveMood() {
    userData.mood = document.getElementById("mood").value;
    userData.note = document.getElementById("note").value;
    show('recommendationScreen');
  }

  function loadTrivia() {
    const q = triviaQuestions[currentQ];
    const container = document.getElementById("triviaScreen");
    container.innerHTML = `
      <h2>ğŸ® Mini Game: Trivia!</h2>
      <p>${q.q}</p>
      <button onclick="finishTrivia(0)">${q.a[0]}</button>
      <button onclick="finishTrivia(1)">${q.a[1]}</button>
    `;
    show("triviaScreen");
  }

  function finishTrivia(choice) {
    const correct = triviaQuestions[currentQ].correct;
    alert(choice === correct ? "âœ… Correct!" : "âŒ Try again next time!");
    currentQ = (currentQ + 1) % triviaQuestions.length;
    show('finalScreen');
  }
</script>

